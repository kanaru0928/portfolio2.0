---
import ArticleLayout from "@layouts/ArticleLayout.astro";
import BlockKatex from "@components/libs/BlockKatex";
import Semigroup from "@components/articles/mathb/Semigroup.astro";
import Monoid from "@components/articles/mathb/Monoid.astro";
import Group from "@components/articles/mathb/Group.astro";
import AbelGroup from "@components/articles/mathb/AbelGroup.astro";
import { TbPointFilled } from "react-icons/tb";
import Ring from "@components/articles/mathb/Ring.astro";
import CommutativeRing from "@components/articles/mathb/CommutativeRing.astro";
import Field from "@components/articles/mathb/Field.astro";

---

<ArticleLayout title="現代数学入門B: 各構造のイメージ" author="Kanaru" date="2024-7-16">
  <dir class="flex flex-col gap-4">
    <Semigroup symbol="S" binSymbol="\\cdot" className="bg-red" BinIcon={TbPointFilled} />
    <Monoid symbol="M" binSymbol="\\cdot" className="bg-green" BinIcon={TbPointFilled} />
    <Group symbol="G" binSymbol="\\cdot" className="bg-pink" BinIcon={TbPointFilled} />
    <AbelGroup symbol="G" binSymbol="\\cdot" className="bg-maroon" BinIcon={TbPointFilled} />
    <Ring symbol="R" className="bg-blue" />
    <CommutativeRing symbol="R" className="bg-teal" />
    <Field symbol="K" className="bg-yellow" />
  </dir>
</ArticleLayout>
