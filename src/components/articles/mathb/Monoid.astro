---
import InlineKatex from "@components/libs/InlineKatex";
import Model from "./Model.astro";
import { TbLetterE, TbPointFilled, TbVectorTriangle } from "react-icons/tb";
import Semigroup from "./Semigroup.astro";
import Identity from "./Identity.astro";
import type { IconType } from "node_modules/react-icons/lib/iconBase";

interface Props {
  className?: string;
  binSymbol: string;
  BinIcon: IconType;
  symbol: string;
  open?: boolean;
  title?: string;
}

const { className = "", binSymbol, symbol, open, BinIcon, title = "モノイド (Monoid)" } = Astro.props;
---

<Model
  title={title}
  symbol={symbol}
  className={className}
  open={open}
>
  <Fragment slot="header">
    <div class="tooltip" data-tip="二項演算">
      <BinIcon />
    </div>
    <div class="tooltip" data-tip="結合法則">
      <TbVectorTriangle />
    </div>
    <div class="tooltip" data-tip="単位元">
      <TbLetterE />
    </div>
  </Fragment>
  <div class="flex gap-4 items-start flex-wrap">
    <Semigroup
      symbol={symbol}
      binSymbol={binSymbol}
      className="bg-red lg:flex-1"
      BinIcon={BinIcon}
    />
    <Identity symbol="e" setSymbol="M" className="bg-peach lg:flex-1" />
  </div>
</Model>
