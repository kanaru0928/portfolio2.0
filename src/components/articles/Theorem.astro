---
import Callout from "@components/libs/Callout.astro";

interface Props {
  className?: string;
  title?: string;
  rate?: number;
}

const { className = "", title = "", rate } = Astro.props;
const hasProof = Astro.slots.proof !== undefined;
---

<Callout
  title={`定理${title && `: ${title}`}`}
  rate={rate}
  className={className + " my-6"}
  idTitle={title}
>
  <slot />
  {
    hasProof && (
      <details>
        <summary>証明</summary>
        <slot name="proof" />
      </details>
    )
  }
</Callout>
