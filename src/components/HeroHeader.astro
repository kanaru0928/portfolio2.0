---
import { Image } from "astro:assets";
import miku1 from "../images/miku1.png";

interface Props {
  text: string;
  description: string;
}

const { text, description } = Astro.props;
---

<div class="hero min-h-screen relative bg-base-300">
  <div
    class="hero-content flex-col lg:flex-row-reverse xl:max-w-[90svw] w-full justify-center xl:justify-between"
  >
    <div class="w-1/2 shrink max-h-80 lg:max-h-full">
      <Image src={miku1} alt="Miku" />
    </div>
    <div
      class="overlay absolute top-0 bottom-0 right-0 left-0 bg-gradient-to-t from-[rgba(0,0,0,.2)] dark:from-[rgba(0,0,0,.5)]"
    >
    </div>
    <div class="xl:w-1/2 shrink z-10">
      <h1 class="text-[clamp(2rem,6vw,4.2rem)] font-black text-accent">
        {text}
      </h1>
      <p class="py-6 font-light">{description}</p>
    </div>
  </div>
</div>
