---
import { Image } from "astro:assets";
import miku1 from "../images/miku1.png";

interface Props {
  text: string;
  description: string;
}

const { text, description } = Astro.props;
---

<div class="hero min-h-screen relative">
  <div
    class="hero-content flex-col lg:flex-row-reverse xl:max-w-[90svw] w-screen justify-center xl:justify-between"
  >
    <div class="w-1/2 shrink max-h-80 lg:max-h-full">
      <Image src={miku1} alt="Miku" />
    </div>
    <div class="overlay"></div>
    <div class="xl:w-1/2 shrink z-10">
      <h1 class="text-[clamp(2rem,6vw,4.2rem)] font-black drop-shadow-lg">
        {text}
      </h1>
      <p class="py-6 font-light">{description}</p>
    </div>
  </div>
</div>

<style lang="scss">
  .overlay {
    background: linear-gradient(rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.5) 100%);
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
  }
</style>
